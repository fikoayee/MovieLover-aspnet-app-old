@using MovieLover.Models;
@model Login

@{
    ViewData["Title"] = "Log in";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <p>
            <h4>Log in to your account</h4>
        </p>

        <div class="row">
            <div class="col-md-8 offset-2">

                <div class="form-group">
                    <label asp-for="Email" class="control-label" style="padding-top: 10px;"></label>
                    <input asp-for="Email" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="control-label"style="padding-top: 10px;"></label>
                    <input asp-for="Password" class="form-control" />
                </div>

                <div class="form-group" style="padding-top: 10px">
                    <input class="btn btn-outline-success float-right" type="submit" value="Log in" />
                    <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Cancel</a>
                </div>

            </div>
        </div>
    </div>
</div> 